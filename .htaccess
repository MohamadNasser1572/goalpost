# Enable mod_rewrite
RewriteEngine On
RewriteBase /GoalPost/

# Allow auth endpoint inside includes
RewriteRule ^includes/auth\.php$ - [L]

# Prevent direct access to sensitive directories (except auth.php)
RewriteCond %{REQUEST_URI} !^/GoalPost/includes/auth\.php$
RewriteRule ^includes/ - [F,L]
RewriteRule ^database/ - [F,L]

